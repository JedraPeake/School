      <br>
                <div class="fluid ui raised segment ">
                    {{#if selectedCount}}
              <div class="ui horizontal statistics">
                <div class="statistic">
                  <div class="value">
                      1
                    </div>
              <div class="label">
                Selected Questions ({{selectedCount}})
                </div>
              </div></div>
              
              <table class="ui single line table">
  <thead>
    <tr>
      <th><center>Form Questions</center></th>
      <th><center>Deselect</center></th>
    </tr>
  </thead>
  <tbody>
      
 {{#each formQuest as |form|}}
 <tr> 
 <td><center>{{form.questionText}}</center></td>
<td><center><div class="ui animated fade button"  {{action 'removeQuestion' form.id}} tabindex="0">
