<div class="ui horizontal statistics">
  <div class="statistic">
    <div class="value">
      2
    </div>
    <div class="label">
Complete Form Details    </div>
  </div></div>
      {{!--<h3>Fill in Form Details</h3>--}}
      
      <div class="field"><h5>Form Name: </h5>
      {{input type="textarea" cols="50" rows="2" value=formName placeholder="add text"}}
      </div>
      <div class="field"><h5>Form Description: </h5>
      {{textarea type="textarea" cols="50" rows="2" value=formDesc placeholder="add text"}}
      </div>
      </div>
<br><br>
<div class="ui green button" {{action 'saveForm'}}>
  <i class = "file alternate outline icon"></i>Save
</div>
{{#if done}}
<h3 style="color:green;">Form has been created!</h3>
                <br><button class="ui basic right labeled icon blue button" {{action 'editBtn' }}>
