 <style>
    .modal{
        position: fixed;
        top: 50%;
        left: 50%;
        max-height: 100%;
        overflow-y: auto;
    }
 </style>
<div class="ui animated fade button" tabindex="0"{{action 'openEditModal' this}}>
     <div class="visible content"></div><div class="hidden content"><i class="write icon"></i></div>
        </div>
{{#ui-modal name=editModal class=editModal }}
  <div class="header">
   Editing Question
  </div>
  <div class="content">
    <div class="ui form">
      <div class="field">
        <label>Question</label>
        {{input type="textarea" cols="50" rows="2" value = questionText}}
      </div>
        <div class="field">
          <label>Order</label>
          {{input type="number" min="1" value=order}}
        </div>
<div class="field">


</div>

<div class="field">
        <label>Help Description</label>
        {{textarea type="textarea" cols="50" rows="2" value = helpDescription }}
      </div>
    </div>
  </div>
  <br>
  <div class="actions">
    <div class="ui deny button">
      Cancel
    </div>
    <div class="ui positive right labeled icon button">
      Save
      <i class="checkmark icon"></i>
    </div>
  </div>
{{/ui-modal}}