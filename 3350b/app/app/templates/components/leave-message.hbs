
<div class="ui raised segment">
    <div class="ui header">
   Leave Me a Message
  </div>
    <form class="ui form">
            
            <div class="field">
                <label>Name</label>
            {{input type="text" cols="50" rows="1" value = ContactName}}
            </div>
            <div class="field">
                <label>Email</label>
            {{input type="text" cols="50" rows="1" value = ContactEmail}}
            </div>
            <div class="field">
                <label>Message</label>
            {{input type="textarea" cols="50" rows="1" value = ContactMessage}}
            </div>
            <br>
            <button {{action 'submitMessage'}} class="ui centered blue medium button" >Submit</button>
    </form>
    </div>
    
      
