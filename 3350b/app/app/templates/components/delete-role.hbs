{{#if DR001IsPermitted }}
  <button class="ui mini circular icon button" {{action 'openModal' key}}
          title="Delete"><i class="remove icon"></i>
  </button>

  {{#ui-modal name= modalName class= modalName }}
    <div class="ui icon header">
      <i class="warning sign icon"></i>
      Please Confirm ...
    </div>
    <div class="content">
      <p>This will delete the role among all users!</p>
    </div>
    <br>
    <div class="actions">
      <div class="ui red cancel inverted button">
        <i class="remove icon"></i>
        No
      </div>
      <div class="ui green ok inverted button">
        <i class="checkmark icon"></i>
        Yes
      </div>
    </div>
  {{/ui-modal}}



{{else}}
  {{#ui-popup content="This feature (DR001) is disabled"}}
    <div class="ui mini circular icon button">
      <i class="remove icon"></i>
    </div>
  {{/ui-popup}}
{{/if}}