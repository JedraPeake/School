 <center>
<div class="ui primary basic  button"  {{action 'noteModal'}}>
    <i class = "plus icon"></i> Create a New Note</div>
</center>



{{#ui-modal name="newNote" class="newNote" }}
  <div class="header">
    Creating new note
  </div>
  <div class="content">
    <div class="ui form">
      <div class="field">
        <label>Title</label>
        {{input type="text" cols="50" rows="1" value = title placeholder="add title"}}
      </div>
          <div class="field">
          <label>Note Content</label>
             {{textarea value=content cols="50" rows="4" placeholder="add content"}}
        </div>
    </div>
  </div>
  <br>
  <div class="actions">
    <div class="ui deny button">
      Cancel
    </div>
    <div class="ui positive right labeled icon button">
      Save
      <i class="checkmark icon"></i>
    </div>
  </div>
{{/ui-modal}}
